super + Return
	st

super + w
	brave

super + N
	st ncmpcpp

super + b
    st newsboat

super + n
	st ncmpcpp -s playlist

super + F5
    mpv --no-cache --no-osc --no-input-default-bindings --profile=low-latency --input-conf=/dev/null --title=webcam $(ls /dev/video[0,2,4,6,8] | tail -n 1)

super + m
	st neomutt

super + A
	sxiv -b -t /home/dmtr/Pictures/Wallpapers

super + u
     st pulsemixer

